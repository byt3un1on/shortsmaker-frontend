{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch App",
      "type": "node-terminal",
      "request": "launch",
      "command": "make run",
      "cwd": "${workspaceFolder}/app",
      "serverReadyAction": {
        "pattern": "Local:\\s+(https?://[^\\s]+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}
